<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Config">
    <ConfigItem Name="ITSMConfigItem::EventModulePost###999-OTRSCIAssignmentSLA" Required="0" Valid="1">
        <Description Translatable="1">Config item event module that assigns and removes service and sla to tickets when a config item is linked or unlinked.</Description>
        <Group>OTRSCIAssignmentSLA</Group>
        <SubGroup>Core::ITSMConfigItem</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::ITSMConfigItem::Event::OTRSCIAssignmentSLA</Item>
                <Item Key="Event">(LinkAdd|LinkDelete)</Item>
                <Item Key="Transaction">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItem::ServiceField" Required="1" Valid="1">
        <Description Translatable="1">Defines the config item field where the service name is stored.</Description>
        <Group>OTRSCIAssignmentSLA</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">TicketServiceName</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItem::SLAField" Required="1" Valid="1">
        <Description Translatable="1">Defines the config item field where the SLA name is stored.</Description>
        <Group>OTRSCIAssignmentSLA</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">TicketSLAName</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItem::EventModulePost###998-OTRSCIAssignmentAttributeDynamicFieldMap" Required="0" Valid="1">
        <Description Translatable="1">Config item event module that assigns CI attributes to ticket dynamic fields when a config item is linked or unlinked.</Description>
        <Group>OTRSCIAssignmentAttributeDynamicFieldMap</Group>
        <SubGroup>Core::ITSMConfigItem</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::ITSMConfigItem::Event::OTRSCIAssignmentAttributeDynamicFieldMap</Item>
                <Item Key="Event">(LinkAdd)</Item>
                <Item Key="Transaction">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItem::TicketDynamicFieldMapping" Required="1" Valid="1">
        <Description Translatable="1">Defines the config item attributes - Ticket DynamicField mapping that is used to copy CI attributes over to Ticket DynamicFields.</Description>
        <Group>OTRSCIAssignmentAttributeDynamicFieldMap</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
                <Item Key="WarrantyExpirationDate">WarrantyExpirationDate</Item>
                <Item Key="SerialNumber">SerialNumber</Item>
                <Item Key="NIC::IPoverDHCP">IPoverDHCP</Item>
                <Item Key="NIC::IPAddress">IPAddress</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ITSMConfigItem::TicketDynamicFieldValueMapping" Required="1" Valid="1">
        <Description Translatable="1">Defines the value mapping of CI Attribute values to DynamicField Keys.</Description>
        <Group>OTRSCIAssignmentAttributeDynamicFieldMap</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
            <Item Key="ServiceEquipement">
                    <Hash>
                        <Item Key="EXA-BASIC">1</Item>
                        <Item Key="EXA-ESSENTIEL">2</Item>
                        <Item Key="EXA-GOLD">3</Item>
                        <Item Key="EXA-PREMIER">4</Item>
                    </Hash>
                </Item>
                <Item Key="SLAEquipement">
                    <Hash>
                        <Item Key="AUCUN">0</Item>
                        <Item Key="EXA-GTI 4H">1</Item>
                        <Item Key="EXA-GTI J+1">2</Item>
                        <Item Key="EXA-GTR 4H">3</Item>
                        <Item Key="EXA-GTR J+1">4</Item>
                        <Item Key="EXA-GTI J+3">5</Item>
                        <Item Key="EXA-GTR J+3">6</Item>
			<Item Key="EXA-GTI 4H 24/7">7</Item>
                        <Item Key="EXA-GTI J+1 24/7">8</Item>
                        <Item Key="EXA-GTR 4H 24/7">9</Item>
                        <Item Key="EXA-GTR J+1 24/7">10</Item>
                    </Hash>
                </Item>
	</Hash>
        </Setting>
    </ConfigItem>
</otrs_config>
