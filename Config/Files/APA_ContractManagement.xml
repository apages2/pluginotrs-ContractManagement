	<ConfigItem Name="Daemon::SchedulerCronTaskManager::Task###MepStatJ" Required="0" Valid="1" ConfigLevel="100">
        <Description Translatable="1">Generate Daily MEP statistics.</Description>
        <Group>APA Contract Management</Group>
        <SubGroup>Daemon::SchedulerCronTaskManager::Task</SubGroup>
        <Setting>
            <Hash>
                <Item Key="TaskName">APA_MEPSuiviJ</Item>
                <Item Key="Schedule">00 21 * * 1-5</Item> <!-- default every day from mondat to friday at 09:00 PM -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::Stats::Exaprobe::APA_MEPSuiviJ</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
            </Hash>
        </Setting>
    </ConfigItem>
